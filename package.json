{
  "name": "swiss-army-knife-card",
  "version": "3.0.0-dev.1",
  "description": "Swiss Army Knife for Lovelace - Modern TypeScript implementation",
  "main": "dist/swiss-army-knife-card.es.js",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:host": "vite --host --mode development",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:analyze": "vite build --mode production && npm run analyze",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --grep visual || echo 'Visual tests skipped - no Chromatic token'",
    "test:performance": "playwright test --grep performance",
    "analyze": "open dist/bundle-analysis.html",
    "clean": "rm -rf dist coverage test-results .vite",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "docs": "typedoc src --out docs/api",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "npm run build && npm run test && npm run changelog",
    "release:dry": "npm run build && npm run test",
    "legacy:build": "rollup -c",
    "legacy:watch": "rollup -c --watch",
    "legacy:serve": "rollup -c serve.config.js --watch",
    "build:stats": "vite build --mode production",
    "build:profile": "vite build --mode production --profile",
    "build:monitor": "node scripts/build.js --monitor",
    "build:clean": "node scripts/build.js --clean"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "typescript",
    "lit"
  ],
  "author": "AmoebeLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmoebeLabs/swiss-army-knife-card.git"
  },
  "bugs": {
    "url": "https://github.com/AmoebeLabs/swiss-army-knife-card/issues"
  },
  "homepage": "https://github.com/AmoebeLabs/swiss-army-knife-card#readme",
  "dependencies": {
    "@formatjs/intl-utils": "^3.8.4",
    "@mdi/js": "^7.2.96",
    "@tanem/svg-injector": "^10.1.53",
    "home-assistant-js-websocket": "^8.0.0",
    "lit": "^3.0.0",
    "memoize-one": "^6.0.0"
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.12.7",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "chromatic": "^13.2.0",
    "conventional-changelog-cli": "^2.2.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "rollup": "^3.21.4",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
